<div class="container">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="https://picsum.photos/300/200?random=10" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{foundUser.name}}</h5>
          <p class="card-text">{{foundUser.email}}</p>
          {{#ifCond user.id foundUser.id}}<a class="btn btn-primary" href="/users/{{user.id}}/edit"
            role="button">Edit</a>{{/ifCond}}

        </div>
      </div>
    </div>
  </div>
</div>